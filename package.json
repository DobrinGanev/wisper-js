{
  "name": "wisper-js",
  "version": "0.1.0",
  "description": "A protocol for remote procedure calls, and object abstractions.",
  "main": "wisper.js",
  "jsnext:main": "wisper.js",
  "scripts": {
    "build": "npm run build-debug && npm run build-min",
    "build-debug": "browserify wisper.js -d --s wisper > dist/wisper.js",
    "build-min": "browserify wisper.js --s wisper | uglifyjs -c > dist/wisper.min.js",
    "test": "karma start karma.conf.js",
    "watch": "watchify wisper.js -d --s wisper -o dist/wisper.js"
  },
  "browserify": {
    "transform": [
      "babelify"
    ]
  },
  "author": "Widespace AB",
  "license": "UNLICENSED",
  "private": true,
  "devDependencies": {
    "babel-eslint": "^3.1.23",
    "babelify": "^6.1.2",
    "browserify": "^11.0.1",
    "browserify-istanbul": "^0.2.1",
    "eslint": "^0.24.1",
    "jasmine-core": "^2.3.4",
    "karma": "^0.12.37",
    "karma-babel-preprocessor": "^5.2.1",
    "karma-browserify": "^4.2.1",
    "karma-chrome-launcher": "^0.2.0",
    "karma-coverage": "^0.4.2",
    "karma-jasmine": "^0.3.6",
    "uglify-js": "^2.4.24",
    "watchify": "^3.3.1"
  },
  "dependencies": {
    "events": "^1.0.2",
    "lodash": "^3.10.0"
  }
}
